<?xml version="1.0"?>
<appian-component-plugin name="Kanban Field" key="dev.ansink.kanban">
  <plugin-info>
    <description>A Kanban Board view to embed in an Appian screen</description>
    <vendor name="Mark Ansink" url="www.appian.com"/>
    <version>1.0.0</version>
    <support supported="false"/>
  </plugin-info>
  <component rule-name="kanbanField" version="1.0.0">
    <sdk-version>2.0.0</sdk-version>
    <supported-user-agents>chrome firefox ie11 edge safari mobile</supported-user-agents>
    <icon-file>kanban.svg</icon-file>
    <parameter>
      <name>tasks</name>
      <category>input-output</category>
      <type>Dictionary?list</type>
    </parameter>
    <parameter>
      <name>columns</name>
      <category>input-only</category>
      <type>Text?list</type>
    </parameter>
    <parameter>
      <name>selectedTask</name>
      <category>input-output</category>
      <type>Integer</type>
    </parameter>
    <html-entry-point>index.html</html-entry-point>
  </component>
</appian-component-plugin>